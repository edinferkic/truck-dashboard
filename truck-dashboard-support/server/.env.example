# where uploaded files are stored (server will create it)
UPLOAD_DIR=<FILL_ME_IN>

# max upload size (bytes) — 12MB default
UPLOAD_MAX_BYTES=<FILL_ME_IN>
# ─── Postgres (Docker) ──────────────────────────────────────────────────────────
POSTGRES_USER=<FILL_ME_IN>
POSTGRES_PASSWORD=<FILL_ME_IN>
POSTGRES_DB=<FILL_ME_IN>
DATABASE_URL=<FILL_ME_IN>

# ─── App Basics ────────────────────────────────────────────────────────────────
SERVER_PORT=<FILL_ME_IN>
WEB_PORT=<FILL_ME_IN>
NODE_ENV=<FILL_ME_IN>
TZ=<FILL_ME_IN>

# ─── Auth ──────────────────────────────────────────────────────────────────────
# Change this in your real .env before production.
JWT_SECRET=<FILL_ME_IN>

# ─── Security ──────────────────────────────────────────────────────────────────
# CORS: comma-separated list of allowed origins (no spaces).
# Include 3001 since Next may fallback when 3000 is busy.
CORS_ORIGINS=<FILL_ME_IN>

# Rate limiting window in ms, and max requests per window per IP.
RATE_LIMIT_WINDOW_MS=<FILL_ME_IN>
RATE_LIMIT_MAX=<FILL_ME_IN>
TESSERACT_PATH=<FILL_ME_IN>
PDFTOPPM_PATH=<FILL_ME_IN>
# (optional) ensure PATH includes common locations
PATH_EXTRA=<FILL_ME_IN>
TESSERACT_BIN=<FILL_ME_IN>
PDFTOPPM_BIN=<FILL_ME_IN>
