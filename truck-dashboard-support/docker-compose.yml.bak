
services:
  db:
    image: postgres:16-alpine
    container_name: truck_pg
    restart: unless-stopped
    ports:
      - "5432:5432"
    environment:
      POSTGRES_USER: ${POSTGRES_USER:-truck}
      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD:-truckpass}
      POSTGRES_DB: ${POSTGRES_DB:-truckdb}
      TZ: ${TZ:-America/Los_Angeles}
    volumes:
      - pgdata:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U $$POSTGRES_USER -d $$POSTGRES_DB"]
      interval: 5s
      timeout: 5s
      retries: 10

  adminer:
    image: adminer:latest
    container_name: truck_adminer
    restart: unless-stopped
    depends_on:
      db:
        condition: service_healthy
    ports:
      - "8080:8080"
    environment:
      ADMINER_DEFAULT_SERVER: db

volumes:
  pgdata:
